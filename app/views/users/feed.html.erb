<h1><%=@user.username%></h1>

<dt>Private</dt>
<dd><%=@user.private%></dd>

<dt>Followers</dt>
<dd><%=@user.received_follow_requests_count%></dd>

<%if @current_user.username == @user.username%>
   <h4>Pending follow requests</h4>
   <%if @pending.present?%>
    <% @pending.each do |request| %>
      <ul>
        <li>
        <%=request.sender.username%>
        
          <form action="/modify_follow_request/<%=request.id%>" method="post">
            <input name="query_status" value="accepted" type="hidden">

            <button>
              Accept
            </button>
          </form>

          <form action="/modify_follow_request/request.sender_id" method="post">
            <input name="query_status" value="rejected" type="hidden">
            <button>
              Reject
            </button>
          </form>

        </li>
      
      </ul>
    <%end%>
  <%end%>
<%end%>
<%if @follow_exist.present? == false%>
      <form action ="/insert_follow_request" method ="post">
        <input type = "hidden" name ="query_recipient_id" value = "<%=@user.id%>">
        <button>Follow</button>
      </form>
<%else%>
    <a href = "/delete_follow_request/<%=@current_user.sent_follow_requests.where({:recipient_id=>@user.id}).at(0).id%>">Unfollow</a>
<%end%>
<dt>Following</dt>
  <dd><%=@user.sent_follow_requests_count%></dd>


<nav>
  <ul>
    <li>
      <a href="/users/<%=@user.username%>">Profile</a>
    </li>
    <li>
      <a href="/users/<%=@user.username%>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%=@user.username%>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%=@user.username%>/discover">Discover</a>
    </li>
  </ul>
</nav>

<h2>Feed (<%=@user.following%>)</h2>

<table border = "1">
 <tr>
    <th>
    Image
    </th>
    <th>
    Owner
    </th>
    <th>
    Caption
    </th>
    <th>
    Posted
    </th>
    <th>
    Likes
    </th>
    <th>
    </th>
 </tr>
 <%@user.own_photos.each do |photo|%>
 <tr>
   <td>
   <img src="<%=photo.image%>">
   </td> 
   <td>
