<!DOCTYPE html>
<html>
  <head>
    <title>PhotogramFinal</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <nav>
      <ul>
        <li>
          <a href="/users">All users<a>
        </li>
        <li>
          <a href="/photos">All public photos<a>
        </li>
        <li>
        <%if @current_user.present?%>
          <a href="/edit_user_profile"><%=@current_user.username%></a>
        <%else%>
          <a href="/user_sign_in">Sign In<a>
        <%end%>
        </li>
        <li>
          <a href="/user_sign_up">Sign Up<a>
        </li>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
